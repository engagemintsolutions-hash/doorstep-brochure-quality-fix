# API Keys
# IMPORTANT: Copy this file to .env and fill in your real keys
# Never commit .env to git! It's in .gitignore for safety.
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Vision Provider
# Options: "claude" or "google"
VISION_PROVIDER=claude

# Google Vision (only if using VISION_PROVIDER=google)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Feature Flags
ENRICHMENT_ENABLED=true
SHRINK_ENABLED=true
EDITOR_SHOW_HYGIENE=true

# Compliance
COMPLIANCE_REQUIRED_KEYWORDS=garden,parking,schools,epc,transport,bathroom,bedroom,kitchen
COMPLIANCE_STRICT_MODE=false

# Export Settings
PDF_MAX_SIZE_MB=10
EXPORT_TMP_DIR=./exports_tmp
EXPORT_RETENTION_HOURS=24

# Logging
LOG_LEVEL=INFO

# ============================================
# DEPLOYMENT INSTRUCTIONS
# ============================================
#
# LOCAL DEVELOPMENT:
# 1. Copy this file: cp .env.example .env
# 2. Fill in your ANTHROPIC_API_KEY
# 3. Never commit .env to git
#
# RAILWAY DEPLOYMENT:
# 1. Go to Railway dashboard
# 2. Click on your service
# 3. Go to "Variables" tab
# 4. Add each variable manually (not from file)
# 5. This keeps keys secure in Railway's encrypted storage
#
# ============================================
